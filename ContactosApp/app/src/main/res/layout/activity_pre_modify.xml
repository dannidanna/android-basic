<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.danny.contactosapp.pre_modify"
    android:background="#ffa726">

    <EditText
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombreEliminar"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:id="@+id/pre_modificar_btn"
        android:onClick="modificar_clicked"
        android:textColor="#ffffff"
        android:background="#ef6c00"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/nombreEliminar"
        android:layout_alignEnd="@+id/nombreEliminar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nombre a Modificar"
        android:id="@+id/titulo_txt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="43dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView6"
        android:src="@drawable/home152"
        android:alpha="0.5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
