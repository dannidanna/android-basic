<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffa726">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="174dp"
        android:id="@+id/grid_main"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:id="@+id/modificar_btn"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="premodificar"
            android:background="#ef6c00"
            android:textColor="#000000" />
    </GridLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/listar_text"
        android:id="@+id/listarbtn"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="onListar"
        android:background="#ef6c00"
        android:textColor="#000000"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/eliminar_btn"
        android:layout_alignLeft="@+id/grid_main"
        android:layout_alignStart="@+id/grid_main" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/eliminar_btn"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="onEliminar"
        android:background="#ef6c00"
        android:textColor="#000000"
        android:layout_below="@+id/grid_main"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/agregar_text"
        android:id="@+id/agregarbtn"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="onClick"
        android:background="#ef6c00"
        android:textColor="#000000"
        android:layout_above="@+id/listarbtn"
        android:layout_alignLeft="@+id/listarbtn"
        android:layout_alignStart="@+id/listarbtn" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icono"
        android:layout_below="@+id/eliminar_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:longClickable="true"
        android:src="@drawable/business133" />

</RelativeLayout>
